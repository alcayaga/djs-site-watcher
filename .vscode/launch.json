    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Monitor (Standard)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/monitor.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Monitor (Single Run)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/monitor.js",
            "env": {
                "SINGLE_RUN": "true"
            }
        }
    ]
}